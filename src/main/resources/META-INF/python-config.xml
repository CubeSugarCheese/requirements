<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="requirements.txt"
                         shortName="InstalledPackageInspection"
                         suppressId="Requirements"
                         groupName="requirements.txt"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.InstalledPackageInspections"/>
        <localInspection language="requirements.txt"
                         shortName="SubRequirementsFileExistsInspection"
                         suppressId="Requirements"
                         groupName="requirements.txt"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="ru.meanmail.codeInspection.SubRequirementsFileExistsInspection"/>
    </extensions>
</idea-plugin>
