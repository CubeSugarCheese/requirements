<idea-plugin>
    <id>ru.meanmail.plugin.requirements</id>
    <name>Requirements</name>
    <version>SNAPSHOT</version>
    <idea-version since-build="173"/>
    <vendor email="plugin@meanmail.ru" url="https://meanmail.ru">meanmail</vendor>
    <description><![CDATA[
        Right python requirements.txt
    ]]>
    </description>
    <change-notes><![CDATA[
      <p>
      <b>Mar 29, 2019 2019.2.1</b>
      <br>
          Update IDE build
      </p>
      <br>

      <p>
      <b>Mar 18, 2019 2019.2</b>
      <br>
          + Package installation. Not installed packages are highlighted<br>
          + Support Reference to subrequirements files (Ctrl + click)
      </p>
      <br>

      <p>
      <b>Mar 01, 2019 2019.1</b>
      <br>
          Update IDE version
      </p>
      <br>

      <p>
      <b>Jun 25, 2018 0.2-beta</b>
      <br>
          Fix: eof after package is syntax error
      </p>

      <br>
      <p>
      <b>Jun 17, 2018 0.1-alpha</b>
      <br>
          First release
      </p>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="python-config.xml">PythonCore</depends>
    <depends optional="true" config-file="python-config.xml">Pythonid</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="ru.meanmail.RequirementsFileTypeFactory"/>
        <localInspection language="requirements.txt"
                         shortName="InstalledPackageInspection"
                         suppressId="Requirements"
                         groupName="requirements.txt"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="ru.meanmail.codeInspection.InstalledPackageInspections"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij.lang">
        <parserDefinition language="requirements.txt"
                          implementationClass="ru.meanmail.RequirementsParserDefinition"/>
        <syntaxHighlighterFactory language="requirements.txt"
                                  implementationClass="ru.meanmail.RequirementsSyntaxHighlighterFactory"/>
        <psiStructureViewFactory language="requirements.txt"
                                 implementationClass="ru.meanmail.structure.RequirementsStructureViewFactory"/>
        <commenter language="requirements.txt"
                   implementationClass="ru.meanmail.RequirementsCommenter"/>
    </extensions>
    <actions>

    </actions>
</idea-plugin>
